{
  "extends": [
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/node18/tsconfig",
    "@tsconfig/esm/tsconfig"
  ],
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false
  },
  "include": ["src", "__tests__"]
}
